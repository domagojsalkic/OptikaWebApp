@Html.Partial("Carousel")

<div class="mt-5 container justify-content-center">
    <div class="container-fluid ">
        <h2 class="text-center">
            O nama
        </h2>
        <p class="text-center">
            Mi smo optika osnovana 2020. godine
        </p>
        <p class="text-center">
